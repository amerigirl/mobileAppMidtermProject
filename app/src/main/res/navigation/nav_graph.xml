<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.mymoviecollectionmidterm.MovieListFragment"
        android:label="Awesome Movie List" >

        <action
            android:id="@+id/action_movieList_to_movieInput"
            app:destination="@id/movieInputFragment" />

        <argument
            android:name="newMovie"
            app:argType="com.example.mymoviecollectionmidterm.Movie"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/movieInputFragment"
        android:name="com.example.mymoviecollectionmidterm.MovieInputFragment"
        android:label="@string/add_movie" />
</navigation>
